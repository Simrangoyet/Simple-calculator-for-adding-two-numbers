
while True:

    print("1. Addition")
    print("2. Subtraction")
    print("3. Multiply")
    print("4. Divide")
    print("5. Exit")

    Choice= int(input("Enter from above choice: "))
    if (Choice>=1 and Choice<=4):
        num1 = float(input("Enter the first number: "))
        num2 = float(input("Enter the second number: "))

        if Choice == 1:
            answer = num1+num2
            print(answer)

        elif Choice == 2:
            answer = num1-num2
            print(answer)
        elif Choice == 3:
            answer = num1*num2
            print(answer)
        else:
            answer = num1 / num2
            print(answer)
    elif Choice == 5:
        print("Calculator exits")
        break
    else:
        print("Please enter between 1 and 5, Thank you")

